---
export type Props = astroHTML.JSX.AnchorHTMLAttributes;

const props = Astro.props;
---

<style is:global>
    .hero-link {
        border: 2px solid white;
        padding: 12px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        font-size: 22px;
        font-weight: 500;
        border-radius: 12px;
        min-height: 100px;
    }

    .hero-link p {
        font-size: 22px;
    }

    .hero-link span {
        display: block;
        font-size: 16px;
    }
</style>

<a {...props} class="hero-link">
    <slot />
</a>
